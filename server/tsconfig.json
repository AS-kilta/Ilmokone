{
    "compilerOptions": {
        "target": "ES2019",
        "lib": [
            "ES2019",
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "outDir": "dist",
        "rootDirs": [".", "../config"]
    },
    "exclude": [
        "node_modules", "dist"
    ]
}