{
  "parser": "@typescript-eslint/parser",
  "settings": {
    "pragma": "React",
    "version": "detect"
  },
  "env": {
    "browser": true
  },
  "plugins": ["react", "@typescript-eslint", "prettier", "simple-import-sort"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "DEV": false,
    "TEST": false,
    "PROD": false,
    "COVERAGE": false,
    "BASENAME": true,
    "PREFIX_URL": true,
    "BRANDING_HEADER_TITLE": true,
    "BRANDING_FOOTER_GDPR_TEXT": true,
    "BRANDING_FOOTER_GDPR_LINK": true,
    "BRANDING_FOOTER_HOME_TEXT": true,
    "BRANDING_FOOTER_HOME_LINK": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "singleQuote": true
      }
    ],
    "simple-import-sort/sort": [
      "error",
      {
        "groups": [
          ["^react$"],
          ["^@?\\w"],
          // Anything that does not start with a dot.
          ["^[^.]"],
          // Anything that starts with a dot.
          ["^."],
          // Css
          ["css$"]
        ]
      }
    ]
  }
}
