extends ../layout.pug

block alertContent
  td.alert.alert-warning
    p.alertText Nollasana salattu

block mainContent
  div.content-block
    p.bodyText Salasanasi AS Ilmokoneeseen on nollattu.
    ul
      li #[strong Sähköposti:] #{email}
      li #[strong Uusi salasana:] #{password}
  div.content-block-last
    p.bodyText Voit kirjautua sisään osoitteessa #[a(href=siteUrl) #{siteUrl}]. Vaihdathan salasanan pikimiten hallinta-paneelissa.
