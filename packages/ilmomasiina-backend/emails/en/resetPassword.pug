extends ../layout.pug

block alertContent
  td.alert.alert-warning
    p.alertText Password reset is, or is?

block mainContent
  div.content-block
    p.bodyText Your password for AS Ilmokone has been reset.
    ul
      li #[strong Email:] #{email}
      li #[strong New password:] #{password}
  div.content-block-last
    p.bodyText You can log in at #[a(href=siteUrl) #{siteUrl}]. Please change the password as soon as possible in the admin panel.
